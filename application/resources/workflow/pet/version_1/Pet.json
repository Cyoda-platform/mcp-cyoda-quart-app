{
  "version": "1.0",
  "name": "Pet Workflow",
  "desc": "Workflow for Pet entity - loads data from petstore API and performs pandas analysis",
  "initialState": "initial_state",
  "active": true,
  "states": {
    "initial_state": {
      "transitions": [
        {
          "name": "create",
          "next": "created",
          "manual": false
        }
      ]
    },
    "created": {
      "transitions": [
        {
          "name": "validate",
          "next": "validated",
          "manual": false,
          "criterion": {
            "type": "function",
            "function": {
              "name": "PetValidationCriterion",
              "config": {
                "calculationNodesTags": "cyoda_application"
              }
            }
          }
        }
      ]
    },
    "validated": {
      "transitions": [
        {
          "name": "load_data",
          "next": "loaded",
          "manual": false,
          "processors": [
            {
              "name": "PetDataLoaderProcessor",
              "executionMode": "SYNC",
              "config": {
                "calculationNodesTags": "cyoda_application"
              }
            }
          ]
        }
      ]
    },
    "loaded": {
      "transitions": [
        {
          "name": "analyze",
          "next": "analyzed",
          "manual": false,
          "processors": [
            {
              "name": "PetDataAnalysisProcessor",
              "executionMode": "SYNC",
              "config": {
                "calculationNodesTags": "cyoda_application"
              }
            }
          ]
        }
      ]
    },
    "analyzed": {
      "transitions": [
        {
          "name": "complete",
          "next": "completed",
          "manual": true
        }
      ]
    },
    "completed": {
      "transitions": [
        {
          "name": "reanalyze",
          "next": "loaded",
          "manual": true
        }
      ]
    }
  }
}
