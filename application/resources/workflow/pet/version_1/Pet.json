{
    "version": "1.0",
    "name": "Pet Workflow",
    "desc": "Workflow for managing pet states and transitions in the Purrfect Pets application",
    "initialState": "initial_state",
    "active": true,
    "states": {
        "initial_state": {
            "transitions": [
                {
                    "name": "transition_to_draft",
                    "next": "draft",
                    "manual": false,
                    "processors": [
                        {
                            "name": "PetCreationProcessor",
                            "executionMode": "SYNC",
                            "config": {
                                "calculationNodesTags": "cyoda_application"
                            }
                        }
                    ]
                }
            ]
        },
        "draft": {
            "transitions": [
                {
                    "name": "transition_to_available",
                    "next": "available",
                    "manual": true,
                    "processors": [
                        {
                            "name": "PetValidationProcessor",
                            "executionMode": "SYNC",
                            "config": {
                                "calculationNodesTags": "cyoda_application"
                            }
                        }
                    ]
                }
            ]
        },
        "available": {
            "transitions": [
                {
                    "name": "transition_to_pending",
                    "next": "pending",
                    "manual": false,
                    "processors": [
                        {
                            "name": "PetReservationProcessor",
                            "executionMode": "SYNC",
                            "config": {
                                "calculationNodesTags": "cyoda_application"
                            }
                        }
                    ]
                },
                {
                    "name": "transition_to_unavailable",
                    "next": "unavailable",
                    "manual": true
                }
            ]
        },
        "pending": {
            "transitions": [
                {
                    "name": "transition_to_sold",
                    "next": "sold",
                    "manual": true,
                    "processors": [
                        {
                            "name": "PetSaleProcessor",
                            "executionMode": "SYNC",
                            "config": {
                                "calculationNodesTags": "cyoda_application"
                            }
                        }
                    ]
                },
                {
                    "name": "transition_to_available",
                    "next": "available",
                    "manual": true,
                    "processors": [
                        {
                            "name": "PetReleaseProcessor",
                            "executionMode": "SYNC",
                            "config": {
                                "calculationNodesTags": "cyoda_application"
                            }
                        }
                    ]
                }
            ]
        },
        "sold": {
            "transitions": [
                {
                    "name": "transition_to_archived",
                    "next": "archived",
                    "manual": true,
                    "processors": [
                        {
                            "name": "PetArchiveProcessor",
                            "executionMode": "SYNC",
                            "config": {
                                "calculationNodesTags": "cyoda_application"
                            }
                        }
                    ]
                }
            ]
        },
        "unavailable": {
            "transitions": [
                {
                    "name": "transition_to_available",
                    "next": "available",
                    "manual": true,
                    "processors": [
                        {
                            "name": "PetReactivationProcessor",
                            "executionMode": "SYNC",
                            "config": {
                                "calculationNodesTags": "cyoda_application"
                            }
                        }
                    ]
                }
            ]
        },
        "archived": {
            "transitions": []
        }
    }
}