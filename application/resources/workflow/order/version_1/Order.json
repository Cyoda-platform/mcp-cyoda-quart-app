{
    "version": "1.0",
    "name": "Order Workflow",
    "desc": "Workflow for managing the lifecycle of an order in the Purrfect Pets API application",
    "initialState": "initial_state",
    "active": true,
    "states": {
        "initial_state": {
            "transitions": [
                {
                    "name": "transition_to_order_placed",
                    "next": "placed",
                    "manual": false,
                    "processors": [
                        {
                            "name": "OrderCreationProcessor",
                            "executionMode": "SYNC",
                            "config": {
                                "calculationNodesTags": "cyoda_application"
                            }
                        }
                    ]
                }
            ]
        },
        "placed": {
            "transitions": [
                {
                    "name": "transition_to_order_cancelled",
                    "next": "cancelled",
                    "manual": true,
                    "processors": [
                        {
                            "name": "OrderCancellationProcessor",
                            "executionMode": "SYNC",
                            "config": {
                                "calculationNodesTags": "cyoda_application"
                            }
                        }
                    ]
                }
            ]
        },
        "confirmed": {
            "transitions": [
                {
                    "name": "transition_to_order_cancelled",
                    "next": "cancelled",
                    "manual": true,
                    "processors": [
                        {
                            "name": "OrderCancellationProcessor",
                            "executionMode": "SYNC",
                            "config": {
                                "calculationNodesTags": "cyoda_application"
                            }
                        }
                    ],
                    "criterion": {
                        "type": "function",
                        "function": {
                            "name": "CancellationAllowedCriterion",
                            "config": {
                                "calculationNodesTags": "cyoda_application"
                            }
                        }
                    }
                }
            ]
        },
        "processing": {
            "transitions": [
                {
                    "name": "transition_to_order_shipped",
                    "next": "shipped",
                    "manual": true,
                    "processors": [
                        {
                            "name": "OrderShippingProcessor",
                            "executionMode": "SYNC",
                            "config": {
                                "calculationNodesTags": "cyoda_application"
                            }
                        }
                    ]
                }
            ]
        },
        "shipped": {
            "transitions": [
                {
                    "name": "transition_to_order_delivered",
                    "next": "delivered",
                    "manual": true,
                    "processors": [
                        {
                            "name": "OrderDeliveryProcessor",
                            "executionMode": "SYNC",
                            "config": {
                                "calculationNodesTags": "cyoda_application"
                            }
                        }
                    ]
                }
            ]
        },
        "delivered": {
            "transitions": [
                {
                    "name": "transition_to_order_returned",
                    "next": "returned",
                    "manual": true,
                    "processors": [
                        {
                            "name": "OrderReturnProcessor",
                            "executionMode": "SYNC",
                            "config": {
                                "calculationNodesTags": "cyoda_application"
                            }
                        }
                    ],
                    "criterion": {
                        "type": "function",
                        "function": {
                            "name": "ReturnEligibleCriterion",
                            "config": {
                                "calculationNodesTags": "cyoda_application"
                            }
                        }
                    }
                }
            ]
        },
        "cancelled": {
            "transitions": []
        },
        "returned": {
            "transitions": []
        }
    }
}