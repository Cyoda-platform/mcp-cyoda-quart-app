{
  "version": "1.0",
  "name": "Order",
  "desc": "Order workflow for managing pet adoption orders",
  "initialState": "initial_state",
  "active": true,
  "states": {
    "initial_state": {
      "transitions": [
        {
          "name": "create_order",
          "next": "pending",
          "manual": false,
          "processors": [
            {
              "name": "CalculateDelivery",
              "executionMode": "ASYNC_NEW_TX",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 3000,
                "retryPolicy": "FIXED"
              }
            }
          ]
        }
      ]
    },
    "pending": {
      "transitions": [
        {
          "name": "process_payment",
          "next": "paid",
          "manual": true,
          "processors": [
            {
              "name": "ProcessPayment",
              "executionMode": "ASYNC_NEW_TX",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 5000,
                "retryPolicy": "FIXED"
              }
            }
          ],
          "criterion": {
            "type": "function",
            "function": {
              "name": "HasValidPayment",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 3000,
                "retryPolicy": "FIXED"
              }
            }
          }
        },
        {
          "name": "cancel_order",
          "next": "cancelled",
          "manual": true
        }
      ]
    },
    "paid": {
      "transitions": [
        {
          "name": "start_processing",
          "next": "processing",
          "manual": true
        },
        {
          "name": "refund_order",
          "next": "cancelled",
          "manual": true,
          "processors": [
            {
              "name": "ProcessPayment",
              "executionMode": "ASYNC_NEW_TX",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 5000,
                "retryPolicy": "FIXED"
              }
            }
          ]
        }
      ]
    },
    "processing": {
      "transitions": [
        {
          "name": "ship_order",
          "next": "shipped",
          "manual": true
        }
      ]
    },
    "shipped": {
      "transitions": [
        {
          "name": "confirm_delivery",
          "next": "delivered",
          "manual": true,
          "processors": [
            {
              "name": "UpdatePetAvailability",
              "executionMode": "ASYNC_NEW_TX",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 3000,
                "retryPolicy": "FIXED"
              }
            }
          ]
        }
      ]
    },
    "delivered": {
      "transitions": []
    },
    "cancelled": {
      "transitions": []
    }
  }
}
