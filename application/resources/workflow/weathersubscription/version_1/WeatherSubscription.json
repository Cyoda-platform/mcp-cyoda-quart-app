{
  "version": "1.0",
  "name": "WeatherSubscription",
  "desc": "Weather subscription management workflow for location-based notifications",
  "initialState": "initial_state",
  "active": true,
  "states": {
    "initial_state": {
      "transitions": [
        {
          "name": "create_subscription",
          "next": "created",
          "manual": false,
          "processors": [
            {
              "name": "CreateSubscriptionProcessor",
              "executionMode": "ASYNC_NEW_TX",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 3000,
                "retryPolicy": "FIXED"
              }
            }
          ]
        }
      ]
    },
    "created": {
      "transitions": [
        {
          "name": "activate_subscription",
          "next": "active",
          "manual": true,
          "processors": [
            {
              "name": "ActivateSubscriptionProcessor",
              "executionMode": "ASYNC_NEW_TX",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 3000,
                "retryPolicy": "FIXED"
              }
            }
          ],
          "criterion": {
            "type": "function",
            "function": {
              "name": "ValidLocationCriteria",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 5000,
                "retryPolicy": "FIXED"
              }
            }
          }
        }
      ]
    },
    "active": {
      "transitions": [
        {
          "name": "pause_subscription",
          "next": "paused",
          "manual": true,
          "processors": [
            {
              "name": "PauseSubscriptionProcessor",
              "executionMode": "ASYNC_NEW_TX",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 3000,
                "retryPolicy": "FIXED"
              }
            }
          ]
        },
        {
          "name": "cancel_subscription",
          "next": "cancelled",
          "manual": true,
          "processors": [
            {
              "name": "CancelSubscriptionProcessor",
              "executionMode": "ASYNC_NEW_TX",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 3000,
                "retryPolicy": "FIXED"
              }
            }
          ]
        }
      ]
    },
    "paused": {
      "transitions": [
        {
          "name": "resume_subscription",
          "next": "active",
          "manual": true,
          "processors": [
            {
              "name": "ResumeSubscriptionProcessor",
              "executionMode": "ASYNC_NEW_TX",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 3000,
                "retryPolicy": "FIXED"
              }
            }
          ]
        },
        {
          "name": "cancel_subscription",
          "next": "cancelled",
          "manual": true,
          "processors": [
            {
              "name": "CancelSubscriptionProcessor",
              "executionMode": "ASYNC_NEW_TX",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 3000,
                "retryPolicy": "FIXED"
              }
            }
          ]
        }
      ]
    },
    "cancelled": {
      "transitions": []
    }
  }
}
