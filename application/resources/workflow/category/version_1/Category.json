{
  "version": "1.0",
  "name": "Category",
  "desc": "Category workflow for managing pet categories",
  "initialState": "initial_state",
  "active": true,
  "states": {
    "initial_state": {
      "transitions": [
        {
          "name": "create_category",
          "next": "active",
          "manual": false,
          "processors": [
            {
              "name": "ValidateCategoryInfo",
              "executionMode": "ASYNC_NEW_TX",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 3000,
                "retryPolicy": "FIXED"
              }
            }
          ],
          "criterion": {
            "type": "function",
            "function": {
              "name": "HasValidName",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 3000,
                "retryPolicy": "FIXED"
              }
            }
          }
        }
      ]
    },
    "active": {
      "transitions": [
        {
          "name": "deactivate_category",
          "next": "inactive",
          "manual": true
        }
      ]
    },
    "inactive": {
      "transitions": [
        {
          "name": "reactivate_category",
          "next": "active",
          "manual": true
        }
      ]
    }
  }
}
