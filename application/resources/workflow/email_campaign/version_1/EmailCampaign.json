{
  "version": "1.0",
  "name": "EmailCampaign Workflow",
  "desc": "Workflow for managing email campaigns from creation to completion",
  "initialState": "initial_state",
  "active": true,
  "states": {
    "initial_state": {
      "transitions": [
        {
          "name": "create",
          "next": "created",
          "manual": false,
          "processors": [
            {
              "name": "EmailCampaignCreationProcessor",
              "executionMode": "SYNC",
              "config": {
                "calculationNodesTags": "cyoda_application"
              }
            }
          ]
        }
      ]
    },
    "created": {
      "transitions": [
        {
          "name": "schedule",
          "next": "scheduled",
          "manual": false,
          "processors": [
            {
              "name": "EmailCampaignSchedulingProcessor",
              "executionMode": "SYNC",
              "config": {
                "calculationNodesTags": "cyoda_application"
              }
            }
          ]
        }
      ]
    },
    "scheduled": {
      "transitions": [
        {
          "name": "send",
          "next": "sent",
          "manual": true,
          "processors": [
            {
              "name": "EmailCampaignSendingProcessor",
              "executionMode": "SYNC",
              "config": {
                "calculationNodesTags": "cyoda_application"
              }
            }
          ]
        }
      ]
    },
    "sent": {
      "transitions": [
        {
          "name": "complete",
          "next": "completed",
          "manual": false,
          "processors": [
            {
              "name": "EmailCampaignCompletionProcessor",
              "executionMode": "SYNC",
              "config": {
                "calculationNodesTags": "cyoda_application"
              }
            }
          ]
        }
      ]
    },
    "completed": {
      "transitions": []
    }
  }
}
