{
  "version": "1.0",
  "name": "EmailCampaign Workflow",
  "desc": "Workflow for managing email campaigns from creation to analysis",
  "initialState": "initial_state",
  "active": true,
  "states": {
    "initial_state": {
      "transitions": [
        {
          "name": "create",
          "next": "created",
          "manual": false
        }
      ]
    },
    "created": {
      "transitions": [
        {
          "name": "validate",
          "next": "validated",
          "manual": false,
          "criterion": {
            "type": "function",
            "function": {
              "name": "EmailCampaignValidationCriterion",
              "config": {
                "calculationNodesTags": "cyoda_application"
              }
            }
          }
        }
      ]
    },
    "validated": {
      "transitions": [
        {
          "name": "schedule",
          "next": "scheduled",
          "manual": false,
          "processors": [
            {
              "name": "EmailCampaignSchedulingProcessor",
              "executionMode": "SYNC",
              "config": {
                "calculationNodesTags": "cyoda_application"
              }
            }
          ]
        }
      ]
    },
    "scheduled": {
      "transitions": [
        {
          "name": "start_sending",
          "next": "sending",
          "manual": true,
          "processors": [
            {
              "name": "EmailCampaignSendingProcessor",
              "executionMode": "ASYNC_NEW_TX",
              "config": {
                "calculationNodesTags": "cyoda_application"
              }
            }
          ]
        },
        {
          "name": "cancel",
          "next": "cancelled",
          "manual": true
        }
      ]
    },
    "sending": {
      "transitions": [
        {
          "name": "complete",
          "next": "completed",
          "manual": false
        },
        {
          "name": "fail",
          "next": "failed",
          "manual": false
        }
      ]
    },
    "completed": {
      "transitions": [
        {
          "name": "analyze",
          "next": "analyzed",
          "manual": false,
          "processors": [
            {
              "name": "EmailCampaignAnalysisProcessor",
              "executionMode": "SYNC",
              "config": {
                "calculationNodesTags": "cyoda_application"
              }
            }
          ]
        }
      ]
    },
    "analyzed": {
      "transitions": []
    },
    "failed": {
      "transitions": [
        {
          "name": "retry",
          "next": "scheduled",
          "manual": true
        },
        {
          "name": "cancel",
          "next": "cancelled",
          "manual": true
        }
      ]
    },
    "cancelled": {
      "transitions": []
    }
  }
}
