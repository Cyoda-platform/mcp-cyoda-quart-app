{
    "version": "1.0",
    "name": "User Workflow",
    "desc": "Description of the workflow for User",
    "initialState": "initial_state",
    "active": true,
    "states": {
        "initial_state": {
            "transitions": [
                {
                    "name": "transition_to_registered",
                    "next": "registered",
                    "manual": false,
                    "processors": [
                        {
                            "name": "UserRegistrationProcessor",
                            "executionMode": "SYNC",
                            "config": {
                                "calculationNodesTags": "cyoda_application"
                            }
                        }
                    ]
                }
            ]
        },
        "registered": {
            "transitions": [
                {
                    "name": "transition_to_verified",
                    "next": "verified",
                    "manual": true,
                    "processors": [
                        {
                            "name": "UserVerificationProcessor",
                            "executionMode": "SYNC",
                            "config": {
                                "calculationNodesTags": "cyoda_application"
                            }
                        }
                    ]
                }
            ]
        },
        "verified": {
            "transitions": [
                {
                    "name": "transition_to_active",
                    "next": "active",
                    "manual": false,
                    "processors": [
                        {
                            "name": "UserActivationProcessor",
                            "executionMode": "SYNC",
                            "config": {
                                "calculationNodesTags": "cyoda_application"
                            }
                        }
                    ]
                }
            ]
        },
        "active": {
            "transitions": [
                {
                    "name": "transition_to_suspended",
                    "next": "suspended",
                    "manual": true,
                    "processors": [
                        {
                            "name": "UserSuspensionProcessor",
                            "executionMode": "SYNC",
                            "config": {
                                "calculationNodesTags": "cyoda_application"
                            }
                        }
                    ]
                },
                {
                    "name": "transition_to_deactivated",
                    "next": "deactivated",
                    "manual": true,
                    "processors": [
                        {
                            "name": "UserDeactivationProcessor",
                            "executionMode": "SYNC",
                            "config": {
                                "calculationNodesTags": "cyoda_application"
                            }
                        }
                    ]
                }
            ]
        },
        "suspended": {
            "transitions": [
                {
                    "name": "transition_to_active",
                    "next": "active",
                    "manual": true,
                    "criterion": {
                        "type": "function",
                        "function": {
                            "name": "SuspensionResolvedCriterion",
                            "config": {
                                "calculationNodesTags": "cyoda_application"
                            }
                        }
                    }
                }
            ]
        },
        "deactivated": {
            "transitions": [
                {
                    "name": "transition_to_active",
                    "next": "active",
                    "manual": true,
                    "processors": [
                        {
                            "name": "UserReactivationProcessor",
                            "executionMode": "SYNC",
                            "config": {
                                "calculationNodesTags": "cyoda_application"
                            }
                        }
                    ]
                },
                {
                    "name": "transition_to_archived",
                    "next": "archived",
                    "manual": true,
                    "criterion": {
                        "type": "function",
                        "function": {
                            "name": "UserInactiveCriterion",
                            "config": {
                                "calculationNodesTags": "cyoda_application"
                            }
                        }
                    }
                }
            ]
        },
        "archived": {
            "transitions": []
        }
    }
}