{
  "version": "1.0",
  "name": "Subscriber Workflow",
  "desc": "Workflow for managing subscriber lifecycle and validation",
  "initialState": "initial_state",
  "active": true,
  "states": {
    "initial_state": {
      "transitions": [
        {
          "name": "create",
          "next": "pending_validation",
          "manual": false
        }
      ]
    },
    "pending_validation": {
      "transitions": [
        {
          "name": "validate",
          "next": "active",
          "manual": false,
          "criterion": {
            "type": "function",
            "function": {
              "name": "SubscriberValidationCriterion",
              "config": {
                "calculationNodesTags": "cyoda_application"
              }
            }
          }
        }
      ]
    },
    "active": {
      "transitions": [
        {
          "name": "pause",
          "next": "paused",
          "manual": true
        },
        {
          "name": "cancel",
          "next": "cancelled",
          "manual": true
        }
      ]
    },
    "paused": {
      "transitions": [
        {
          "name": "reactivate",
          "next": "active",
          "manual": true
        },
        {
          "name": "cancel",
          "next": "cancelled",
          "manual": true
        }
      ]
    },
    "cancelled": {
      "transitions": []
    }
  }
}
