{
  "version": "1.0",
  "name": "Product Workflow",
  "desc": "Workflow for Product entity lifecycle management",
  "initialState": "initial_state",
  "active": true,
  "states": {
    "initial_state": {
      "transitions": [
        {
          "name": "create",
          "next": "created",
          "manual": false
        }
      ]
    },
    "created": {
      "transitions": [
        {
          "name": "validate",
          "next": "validated",
          "manual": false,
          "criterion": {
            "type": "function",
            "function": {
              "name": "ProductValidationCriterion",
              "config": {
                "calculationNodesTags": "cyoda_application"
              }
            }
          }
        }
      ]
    },
    "validated": {
      "transitions": [
        {
          "name": "activate",
          "next": "active",
          "manual": false
        }
      ]
    },
    "active": {
      "transitions": [
        {
          "name": "update_inventory",
          "next": "active",
          "manual": true,
          "processors": [
            {
              "name": "ProductInventoryProcessor",
              "executionMode": "SYNC",
              "config": {
                "calculationNodesTags": "cyoda_application"
              }
            }
          ]
        },
        {
          "name": "deactivate",
          "next": "inactive",
          "manual": true
        }
      ]
    },
    "inactive": {
      "transitions": [
        {
          "name": "reactivate",
          "next": "active",
          "manual": true
        }
      ]
    }
  }
}
