{
  "version": "1.0",
  "name": "Product Workflow",
  "desc": "Workflow for Product entity in Product Performance Analysis and Reporting System",
  "initialState": "initial_state",
  "active": true,
  "states": {
    "initial_state": {
      "transitions": [
        {
          "name": "create",
          "next": "created",
          "manual": false
        }
      ]
    },
    "created": {
      "transitions": [
        {
          "name": "validate",
          "next": "validated",
          "manual": false,
          "criterion": {
            "type": "function",
            "function": {
              "name": "ProductValidationCriterion",
              "config": {
                "calculationNodesTags": "cyoda_application"
              }
            }
          }
        }
      ]
    },
    "validated": {
      "transitions": [
        {
          "name": "analyze",
          "next": "analyzed",
          "manual": false,
          "processors": [
            {
              "name": "ProductAnalysisProcessor",
              "executionMode": "SYNC",
              "config": {
                "calculationNodesTags": "cyoda_application"
              }
            }
          ]
        }
      ]
    },
    "analyzed": {
      "transitions": [
        {
          "name": "update",
          "next": "analyzed",
          "manual": true
        },
        {
          "name": "archive",
          "next": "archived",
          "manual": true
        }
      ]
    },
    "archived": {
      "transitions": []
    }
  }
}
