{
  "version": "1.0",
  "name": "PerformanceReport Workflow",
  "desc": "Workflow for generating weekly performance reports with analysis and insights",
  "initialState": "initial_state",
  "active": true,
  "states": {
    "initial_state": {
      "transitions": [
        {
          "name": "create",
          "next": "created",
          "manual": false
        }
      ]
    },
    "created": {
      "transitions": [
        {
          "name": "validate",
          "next": "validated",
          "manual": false,
          "criterion": {
            "type": "function",
            "function": {
              "name": "PerformanceReportValidationCriterion",
              "config": {
                "calculationNodesTags": "cyoda_application"
              }
            }
          }
        }
      ]
    },
    "validated": {
      "transitions": [
        {
          "name": "generate_report",
          "next": "report_generated",
          "manual": false,
          "processors": [
            {
              "name": "PerformanceReportGenerationProcessor",
              "executionMode": "SYNC",
              "config": {
                "calculationNodesTags": "cyoda_application"
              }
            }
          ]
        }
      ]
    },
    "report_generated": {
      "transitions": [
        {
          "name": "finalize",
          "next": "finalized",
          "manual": false,
          "processors": [
            {
              "name": "PerformanceReportFinalizationProcessor",
              "executionMode": "SYNC",
              "config": {
                "calculationNodesTags": "cyoda_application"
              }
            }
          ]
        }
      ]
    },
    "finalized": {
      "transitions": [
        {
          "name": "complete",
          "next": "completed",
          "manual": false
        }
      ]
    },
    "completed": {
      "transitions": []
    }
  }
}
