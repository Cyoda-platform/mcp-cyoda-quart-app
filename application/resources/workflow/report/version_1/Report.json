{
  "version": "1.0",
  "name": "Report Workflow",
  "desc": "Workflow for Report entity in Product Performance Analysis System",
  "initialState": "initial_state",
  "active": true,
  "states": {
    "initial_state": {
      "transitions": [
        {
          "name": "generate",
          "next": "generating",
          "manual": false
        }
      ]
    },
    "generating": {
      "transitions": [
        {
          "name": "complete_generation",
          "next": "generated",
          "manual": false,
          "processors": [
            {
              "name": "ReportGenerationProcessor",
              "executionMode": "SYNC",
              "config": {
                "calculationNodesTags": "cyoda_application"
              }
            }
          ]
        }
      ]
    },
    "generated": {
      "transitions": [
        {
          "name": "send_email",
          "next": "emailed",
          "manual": false,
          "criterion": {
            "type": "function",
            "function": {
              "name": "ReportReadyForEmailCriterion",
              "config": {
                "calculationNodesTags": "cyoda_application"
              }
            }
          },
          "processors": [
            {
              "name": "EmailNotificationProcessor",
              "executionMode": "SYNC",
              "config": {
                "calculationNodesTags": "cyoda_application"
              }
            }
          ]
        }
      ]
    },
    "emailed": {
      "transitions": [
        {
          "name": "complete",
          "next": "completed",
          "manual": false
        }
      ]
    },
    "completed": {
      "transitions": []
    }
  }
}
