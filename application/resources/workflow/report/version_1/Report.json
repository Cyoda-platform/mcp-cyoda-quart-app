{
  "version": "1.0",
  "name": "Report Workflow",
  "desc": "Workflow for Report entity in Product Performance Analysis and Reporting System",
  "initialState": "initial_state",
  "active": true,
  "states": {
    "initial_state": {
      "transitions": [
        {
          "name": "create",
          "next": "created",
          "manual": false
        }
      ]
    },
    "created": {
      "transitions": [
        {
          "name": "validate",
          "next": "validated",
          "manual": false,
          "criterion": {
            "type": "function",
            "function": {
              "name": "ReportValidationCriterion",
              "config": {
                "calculationNodesTags": "cyoda_application"
              }
            }
          }
        }
      ]
    },
    "validated": {
      "transitions": [
        {
          "name": "generate",
          "next": "generated",
          "manual": false,
          "processors": [
            {
              "name": "ReportGenerationProcessor",
              "executionMode": "SYNC",
              "config": {
                "calculationNodesTags": "cyoda_application"
              }
            }
          ]
        }
      ]
    },
    "generated": {
      "transitions": [
        {
          "name": "send_email",
          "next": "sent",
          "manual": false,
          "processors": [
            {
              "name": "EmailNotificationProcessor",
              "executionMode": "ASYNC_NEW_TX",
              "config": {
                "calculationNodesTags": "cyoda_application"
              }
            }
          ]
        },
        {
          "name": "retry_email",
          "next": "generated",
          "manual": true
        }
      ]
    },
    "sent": {
      "transitions": [
        {
          "name": "archive",
          "next": "archived",
          "manual": true
        }
      ]
    },
    "archived": {
      "transitions": []
    }
  }
}
