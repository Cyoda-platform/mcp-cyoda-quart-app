{
  "version": "1.0",
  "name": "Pet",
  "desc": "Pet workflow for managing pet availability and sales",
  "initialState": "initial_state",
  "active": true,
  "states": {
    "initial_state": {
      "transitions": [
        {
          "name": "register_pet",
          "next": "available",
          "manual": false,
          "processors": [
            {
              "name": "RegisterPetProcessor",
              "executionMode": "ASYNC_NEW_TX",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 3000,
                "retryPolicy": "FIXED"
              }
            }
          ]
        }
      ]
    },
    "available": {
      "transitions": [
        {
          "name": "reserve_pet",
          "next": "pending",
          "manual": true,
          "processors": [
            {
              "name": "ReservePetProcessor",
              "executionMode": "ASYNC_NEW_TX",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 3000,
                "retryPolicy": "FIXED"
              }
            }
          ],
          "criterion": {
            "type": "function",
            "function": {
              "name": "PetAvailabilityCriterion",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 5000,
                "retryPolicy": "FIXED"
              }
            }
          }
        }
      ]
    },
    "pending": {
      "transitions": [
        {
          "name": "cancel_reservation",
          "next": "available",
          "manual": true
        },
        {
          "name": "complete_sale",
          "next": "sold",
          "manual": true,
          "processors": [
            {
              "name": "CompleteSaleProcessor",
              "executionMode": "ASYNC_NEW_TX",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 3000,
                "retryPolicy": "FIXED"
              }
            }
          ]
        }
      ]
    },
    "sold": {
      "transitions": []
    }
  }
}
