{
  "version": "1.0",
  "name": "Comment Workflow",
  "desc": "Workflow for processing individual comments from JSONPlaceholder API with analysis",
  "initialState": "initial_state",
  "active": true,
  "states": {
    "initial_state": {
      "transitions": [
        {
          "name": "ingest",
          "next": "ingested",
          "manual": false
        }
      ]
    },
    "ingested": {
      "transitions": [
        {
          "name": "analyze",
          "next": "analyzed",
          "manual": false,
          "criterion": {
            "type": "function",
            "function": {
              "name": "CommentValidationCriterion",
              "config": {
                "calculationNodesTags": "cyoda_application"
              }
            }
          },
          "processors": [
            {
              "name": "CommentAnalysisProcessor",
              "executionMode": "SYNC",
              "config": {
                "calculationNodesTags": "cyoda_application"
              }
            }
          ]
        }
      ]
    },
    "analyzed": {
      "transitions": [
        {
          "name": "complete",
          "next": "completed",
          "manual": false
        }
      ]
    },
    "completed": {
      "transitions": []
    }
  }
}
